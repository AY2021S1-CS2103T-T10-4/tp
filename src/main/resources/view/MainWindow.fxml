<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.stage.Stage?>

<fx:root minHeight="600" minWidth="770" onCloseRequest="#handleExit" title="Tutor's Pet" type="javafx.stage.Stage"
         xmlns="http://javafx.com/javafx/11.0.0" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/tutors_pet_32.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox>
        <MenuBar fx:id="menuBar" style="-fx-background-color: #2c2c2e;" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

        <StackPane fx:id="commandBoxPlaceholder" style="-fx-background-color: #2c2c2e;" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>

        <StackPane fx:id="resultDisplayPlaceholder" maxHeight="100" minHeight="100" prefHeight="100" style="-fx-background-color: #2c2c2e;" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>

        <HBox style="-fx-background-color: #2c2c2e;" VBox.vgrow="ALWAYS">
          <children>
             <VBox fx:id="moduleClassList" minWidth="365.0" prefWidth="365.0" styleClass="pane-with-border">
               <padding>
                 <Insets bottom="10" left="10" right="10" top="10" />
               </padding>
                     <Text strokeType="OUTSIDE" strokeWidth="0.0" text="C L A S S E S" textAlignment="CENTER" textOrigin="CENTER">
                        <font>
                           <Font name="SansSerif Bold Italic" size="15.0" />
                        </font>
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin>
                     </Text>
               <StackPane fx:id="moduleClassListPanelPlaceholder" VBox.vgrow="ALWAYS" />
                     <HBox.margin>
                        <Insets bottom="10.0" left="15.0" top="10.0" />
                     </HBox.margin>
                     <effect>
                        <DropShadow color="#3eb9cfc4" height="38.75" radius="19.1875" width="40.0" />
                     </effect>
             </VBox>
                  <VBox fx:id="divider" maxWidth="10.0" minWidth="10.0" prefHeight="102.0" prefWidth="10.0"
                        styleClass="pane-with-border" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="17.0" top="17.0" />
                     </HBox.margin>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </VBox>
             <VBox fx:id="studentList" minWidth="365.0" prefWidth="365.0" styleClass="pane-with-border" HBox.hgrow="ALWAYS">
               <padding>
                 <Insets bottom="10" left="10" right="10" top="10" />
               </padding>
                     <Text strokeType="OUTSIDE" strokeWidth="0.0" text="S T U D E N T S">
                        <font>
                           <Font name="SansSerif Bold Italic" size="15.0" />
                        </font>
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin>
                     </Text>
               <StackPane fx:id="studentListPanelPlaceholder" VBox.vgrow="ALWAYS" />
                     <HBox.margin>
                        <Insets bottom="10.0" right="15.0" top="10.0" />
                     </HBox.margin>
                     <effect>
                        <DropShadow color="#3eb9cfc4" height="37.0" radius="18.75" width="40.0" />
                     </effect>
             </VBox>
          </children>
        </HBox>

        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
